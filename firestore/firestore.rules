rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Special rule for admin role assignment
      allow update: if 
        request.auth != null && 
        (
          request.auth.uid == userId ||
          (
            // Allow auto-promotion for foundation emails
            request.resource.data.role == "admin" &&
            request.auth.token.email.matches(".*@unamifoundation.org")
          )
        );
    }

    // Children collection
    match /children/{childId} {
      allow read: if request.auth != null;
      allow create: if 
        request.auth != null &&
        request.auth.uid == request.resource.data.guardianId &&
        request.resource.data.name is string &&
        request.resource.data.name.size() >= 2 &&
        request.resource.data.age is number &&
        request.resource.data.age >= 1 &&
        request.resource.data.age <= 18;
      allow update, delete: if 
        request.auth != null &&
        request.auth.uid == resource.data.guardianId;
    }
  }
}